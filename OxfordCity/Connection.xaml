<Page
    x:Class="OxfordCity.Connection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image Source="Assets/Background.jpg" Stretch="UniformToFill"/>
        <Grid>
            <TextBlock Text="Do You Have A Internet Connection ?" FontSize="54" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="470,320,0,0"/>
            <Button Content="Yes" Margin="740,470,0,0" VerticalAlignment="Top" Height="75" Width="280" HorizontalAlignment="Left" Click="Yes_Click"/>
            <Button Content="No" Margin="740,610,0,0" VerticalAlignment="Top" Height="75" Width="280" HorizontalAlignment="Left" Click="No_Click"/>
        </Grid>
    </Grid>
</Page>
